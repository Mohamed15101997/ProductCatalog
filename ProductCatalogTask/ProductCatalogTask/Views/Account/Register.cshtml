@model RegisterViewModel
@{
	ViewData["Title"] = "Register";
}
<h2>Register</h2>
<form asp-action="Register">
	<div asp-validation-summary="All" class="text-danger"></div>
	<div class="form-group">
		<label class="form-label mt-4" asp-for="Name"></label>
		<input class="form-control" placeholder="Enter Your Name" asp-for="Name">
		<span class="text-danger" asp-validation-for="Name"></span>
	</div>
	<div class="form-group">
		<label class="form-label mt-4" asp-for="UserName"></label>
		<input class="form-control" placeholder="Enter Your User Name" asp-for="UserName">
		<span class="text-danger" asp-validation-for="UserName"></span>
	</div>
	<div class="form-group">
		<label class="form-label mt-4" asp-for="Password"></label>
		<input class="form-control" placeholder="Enter Password" asp-for="Password">
		<span class="text-danger" asp-validation-for="Password"></span>
	</div>
	<div class="form-group">
		<label class="form-label mt-4" asp-for="ConfirmPassword"></label>
		<input class="form-control" placeholder="Enter Confirm Password" asp-for="ConfirmPassword">
		<span class="text-danger" asp-validation-for="ConfirmPassword"></span>
	</div>
	<button type="submit" class="btn btn-success text-light mt-4">Save</button>
	<br />
	<a asp-action="Login" class="btn btn-secondary mt-2">Back to Login </a>


</form>
@section Scripts {
	<partial name="_ValidationScriptsPartial"></partial>
}
