@model EditProductViewModel
@{
	ViewData["Title"] = "Edit Product";
}
<h2>Edit Product</h2>
<form asp-controller="Product" enctype="multipart/form-data">
	<div class="form-group">
		<label class="form-label mt-4" asp-for="Name"></label>
		<input class="form-control" type="text" placeholder="Enter Product Name" asp-for="Name">
		<span class="text-danger" asp-validation-for="Name"></span>
	</div>
	<div class="form-group">
		<label class="form-label mt-4" asp-for="CategoryId"></label>
		<select class="form-select" asp-for="CategoryId" asp-items="Model.Categories"
				data-placeholder="Select a Category">
			<option value=""></option>
		</select>
		<span class="text-danger" asp-validation-for="CategoryId"></span>
	</div>
	<div class="form-group">
		<label class="form-label mt-4" asp-for="StartDate"></label>
		<input class="form-control" type="date" asp-for="StartDate"
			   min="@DateTime.Now.ToString("yyyy-MM-dd")">
		<span class="text-danger" asp-validation-for="StartDate"></span>
	</div>
	<div class="form-group">
		<label class="form-label mt-4" asp-for="Duration"></label>
		<input class="form-control" type="text" placeholder="Enter The Duration" asp-for="Duration">
		<span class="text-danger" asp-validation-for="Duration"></span>
	</div>
	<div class="form-group">
		<label class="form-label mt-4" asp-for="Price"></label>
		<input class="form-control" type="text" placeholder="Enter Product Price" asp-for="Price">
		<span class="text-danger" asp-validation-for="Price"></span>
	</div>
	<div class="form-group">
		<label class="form-label mt-4" asp-for="Image"></label>
		<input class="form-control" type="file" asp-for="Image"
			   data-rule-filesize="@FileSettings.MaxFileSizeInBytes"
			   data-msg-filesize="Maximum allowed Size is @(FileSettings.MaxFileSizeInMB)MB"
			   data-rule-extension="@FileSettings.AllowedExtensions.Replace(".",string.Empty)"
			   data-msg-extension="Not Allow Extensions">
		<small class="form-text text-muted">Only @FileSettings.AllowedExtensions Files are allowed with max size @(FileSettings.MaxFileSizeInMB)MB.</small>
		<span class="text-danger d-block" asp-validation-for="Image"></span>
	</div>
	<button type="submit" class="btn btn-success text-light mt-4">Save</button>
	<br />
	<a asp-action="Index" class="btn btn-secondary mt-2">Back to List </a>


</form>
@section Scripts {
	<partial name="_ValidationScriptsPartial"></partial>
	<script src="~/js/filesize-validator.js" asp-append-version="true"></script>
}